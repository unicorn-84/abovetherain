extends ../../../views/layouts/app
append variables
  -var page = htmlWebpackPlugin.options.vars.page
  -var icon = require('../../../images/icons/favicon.ico')
  -var logo = require('../../../images/logo/logo.png')
append content
  //Content
  div(id='content')
    //Container
    div(class='container')
      div(class='row justify-content-center')
        div(class='col-12 col-lg-8')
          div(class='card card-page')
            //Carousel
            div(id='zumbaFitnessCarousel', class='carousel slide', data-ride='carousel')
              ol(class='carousel-indicators')
                li(data-target='#zumbaFitnessCarousel', data-slide-to='0', class='active')
                li(data-target='#zumbaFitnessCarousel', data-slide-to='1')
                li(data-target='#zumbaFitnessCarousel', data-slide-to='2')
              div(class='carousel-inner')
                div(class='carousel-item active')
                  div(class='image-container')
                    img(class='d-block', src= require('../../../images/services/zumba-fitness/001-zumba-fitness-600x400.jpg'), alt='Zumba® Fitness | Над Дождём', srcset= require('../../../images/services/zumba-fitness/001-zumba-fitness-600x400.jpg') + ' 600w, ' + require('../../../images/services/zumba-fitness/001-zumba-fitness-1200x800.jpg') + ' 1200w')
                div(class='carousel-item')
                  div(class='image-container')
                    img(class='d-block', src= require('../../../images/services/zumba-fitness/002-zumba-fitness-600x400.jpg'), alt='Zumba® Fitness | Над Дождём', srcset= require('../../../images/services/zumba-fitness/002-zumba-fitness-600x400.jpg') + ' 600w, ' + require('../../../images/services/zumba-fitness/002-zumba-fitness-1200x800.jpg') + ' 1200w')
                div(class='carousel-item')
                  div(class='image-container')
                    img(class='d-block', src= require('../../../images/services/zumba-fitness/003-zumba-fitness-600x400.jpg'), alt='Zumba® Fitness | Над Дождём', srcset= require('../../../images/services/zumba-fitness/003-zumba-fitness-600x400.jpg') + ' 600w, ' + require('../../../images/services/zumba-fitness/003-zumba-fitness-1200x800.jpg') + ' 1200w')
                a(class='carousel-control-prev', href='#zumbaFitnessCarousel', role='button', data-slide='prev')
                  span(class='carousel-control-prev-icon' aria-hidden='true')
                  span(class='sr-only') Previous
                a(class='carousel-control-next' href='#zumbaFitnessCarousel' role='button' data-slide='next')
                  span(class='carousel-control-next-icon' aria-hidden='true')
                  span(class='sr-only') Next
            //Body
            div(class='card-body')
              //Title
              h2(class='card-title')
                | Zumba® Fitness
              //Subtitle
              p(class='card-subtitle')
                | Одно занятие - 750 руб
                br
                | Пробное занятие - 500 руб
              p(class='card-text')
                | Программа Zumba® Fitness — это танцевальное направление в фитнесе, в котором используются движения различных танцевальных стилей (латиноамериканских и других международных направлений: сальса, бачата, реггетон, кумбия и др).
              p(class='card-text')
                | Оно построено на сочетании быстрых и медленных ритмов, позволяющих быть в форме и совершенствовать свое тело. Для овладения техникой Зумбы совсем не обязательно быть профессиональным танцором, любой желающий, независимо от его танцевальной подготовки, может легко освоить данный класс. Тренировка дарит атмосферу праздника, которая помогает раскрепоститься, получить удовольствие и создать музыкально-танцевальное настроение.
            if data.directions.zumbaFitness.coaches || data.directions.zumbaFitness.schedule
              //Footer
              div(class='card-footer service-footer')
                if data.directions.zumbaFitness.coaches
                  div(class='coach-direction-link')
                    h5(class='card-text')
                      i(class='far fa-list-alt fa-lg')
                      | &nbsp;
                      | Тренеры:
                    ul
                      each coach in data.directions.zumbaFitness.coaches
                        li
                          if coach.link
                            a(href= coach.link)= coach.title
                          else
                            | #{coach.title}
                if data.directions.zumbaFitness.schedule
                  div(class='coach-schedule-link')
                    h5(class='card-text')
                      a(class='coach-schedule-link', href= data.directions.zumbaFitness.schedule )
                        i(class='far fa-calendar-alt fa-lg')
                        | &nbsp;
                        | Расписание занятий
