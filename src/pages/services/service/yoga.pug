extends ../../../views/layouts/app
append variables
  -var page = htmlWebpackPlugin.options.vars.page
  -var icon = require('../../../images/icons/favicon.ico')
  -var logo = require('../../../images/logo/logo.png')
append content
  //Content
  div(id='content')
    //Container
    div(class='container')
      div(class='row justify-content-center')
        div(class='col-12 col-lg-8')
          div(class='card card-page')
            //Image
            div(class='image-container')
              img(class='card-img-top', src= require(
                '../../../images/services/yoga/001-yoga-600x400.jpg'), alt='Королевская йога | Над Дождём', srcset= require(
                '../../../images/services/yoga/001-yoga-600x400.jpg') + ' 600w,' +
              require('../../../images/services/yoga/001-yoga-1200x800.jpg') + ' 1200w')
            //Body
            div(class='card-body')
              //Title
              h2(class='card-title')
                | Королевская йога
              //Subtitle
              p(class='card-subtitle')
                | Одно занятие - 750 руб
                br
                | Пробное занятие - 500 руб
              p(class='card-text')
                | Йога - практика ума и тела, сочетающая в себе различные физические позы, дыхательные техники, медитацию и релаксацию. Занятие по йоге нацелено на гармонизацию психического и физиологического состояния организма.
            if data.directions.yoga.coaches || data.directions.yoga.schedule
              //Footer
              div(class='card-footer service-footer')
                if data.directions.yoga.coaches
                  div(class='coach-direction-link')
                    h5(class='card-text')
                      i(class='far fa-list-alt fa-lg')
                      | &nbsp;
                      | Тренеры:
                    ul
                      each coach in directions.yoga.coaches
                        li
                          if coach.link
                            a(href= coach.link)= coach.title
                          else
                            | #{coach.title}
                if data.directions.yoga.schedule
                  div(class='coach-schedule-link')
                    h5(class='card-text')
                      a(class='coach-schedule-link', href= data.directions.yoga.schedule )
                        i(class='far fa-calendar-alt fa-lg')
                        | &nbsp;
                        | Расписание занятий
