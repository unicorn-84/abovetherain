extends ../../../templates/layout
//-VARIABLES
append variables
  - const { options, pages, primaryNavigation } = require('../../../data');
//-META
append meta
  //Page meta tags
  if pages.yoga.title
    title= pages.yoga.title
  if pages.yoga.description
    meta(name='description', content= pages.yoga.description)
//-ICONS
append icons
  //Page icons
//-STYLES
append styles
  //Page styles
  +assets('css', /service\./i)
//-HEADER
append header
  //Header
  +header(primaryNavigation)
//-PAGE TITLE
append pageTitle
  +pageTitle(pages.yoga)
//-CONTENT
append content
  //Content
  div(id='content')
    //Container
    div(class='container')
      div(class='row justify-content-center')
        div(class='col-12 col-lg-8')
          div(class='card card-page')
            //Image
            div(class='image-container')
              img(class='card-img-top', src= require(
                '../../../images/services/yoga/001-yoga-600x400.jpg'), alt='Королевская йога | Над Дождём', srcset= require(
                '../../../images/services/yoga/001-yoga-600x400.jpg') + ' 600w,' +
              require('../../../images/services/yoga/001-yoga-800x533.jpg') + ' 800w')
            //Body
            div(class='card-body')
              //Title
              h2(class='card-title')
                | Воздушное кольцо
              //Subtitle
              p(class='card-subtitle')
                | Одно занятие - 750 руб
                br
                | Пробное занятие - 500 руб
              p(class='card-text')
                | Йога - практика ума и тела, сочетающая в себе различные физические позы, дыхательные техники, медитацию и релаксацию. Занятие по йоге нацелено на гармонизацию психического и физиологического состояния организма.
//-SCRIPTS
append scripts
  //Page scripts
  +assets('js', /service\./i)
