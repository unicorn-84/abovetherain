extends ../../../views/layouts/app
append variables
  -var page = htmlWebpackPlugin.options.vars.page
  -var icon = require('../../../images/icons/favicon.ico')
  -var logo = require('../../../images/logo/logo.png')
append content
  div(id='content')
    div(class='container')
      div(class='row justify-content-center')
        div(class='col-12 col-lg-8')
          div(class='card card-page')
            //Image
            div(class='image-container')
              img(class='card-img-top', src= require(
                '../../../images/services/silk/001-silk-600x400.jpg'), alt='Воздушное полотно | Над Дождём', srcset= require(
                '../../../images/services/silk/001-silk-600x400.jpg') + ' 600w,' +
              require('../../../images/services/silk/001-silk-1200x800.jpg') + ' 1200w')
            //Body
            div(class='card-body')
              //Title
              h2(class='card-title')
                | Воздушное полотно
              //Subtitle
              p(class='card-subtitle')
                | Одно занятие - 750 руб
                br
                | Пробное занятие - 500 руб
              p(class='card-text')
                | Воздушные полотна - спорт для избранных. Здесь вы полностью удовлетворите свою тягу к совершенству. Зависая в воздухе при помощи двух полотен, танцоры демонстрируют различные трюки, срывы, эффектные висы и шпагаты.
              p(class='card-text')
                | Занимаясь воздушными полотнами, вы обретаете желанную спортивную форму, гибкость и пластичность тела.
            if data.directions.silk.coaches || data.directions.silk.schedule
              //Footer
              div(class='card-footer coach-footer')
                if data.directions.silk.coaches
                  div(class='coach-direction-link')
                    h5(class='card-text')
                      i(class='far fa-list-alt fa-lg')
                      | &nbsp;
                      | Тренеры:
                    ul
                      each coach in data.directions.silk.coaches
                        li
                          if coach.link
                            a(href= coach.link)= coach.title
                          else
                            | #{coach.title}
                if data.directions.silk.schedule
                  div(class='coach-schedule-link')
                    h5(class='card-text')
                      a(class='coach-schedule-link', href= data.directions.silk.schedule )
                        i(class='far fa-calendar-alt fa-lg')
                        | &nbsp;
                        | Расписание занятий
