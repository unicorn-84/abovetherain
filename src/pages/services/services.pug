extends ../../templates/layout
//-VARIABLES
append variables
  - const { options, pages, primaryNavigation } = require('../../data');
//-META
append meta
  //Page meta tags
  if pages.services.title
    title= pages.services.title
  if pages.services.description
    meta(name='description', content= pages.services.description)
//-ICONS
append icons
  //Page icons
//-STYLES
append styles
  //Page styles
  +assets('css', /services\./i)
//-HEADER
append header
  //Header
  +header(primaryNavigation)
//-PAGE TITLE
append pageTitle
  //Page title
  +pageTitle(pages.services)
//-CONTENT
append content
  //Content
  div(id='content')
    //Container
    div(class='container')
      div(class='row')
        <!--АРЕНДА-->
        div(class='col-12 col-lg-6 d-flex align-items-stretch')
          div(class='card mb-4')
            //Image
            div(class='image-container')
              a(href= pages.rent.link)
                img(class='card-img-top', src= require(
                  '../../images/services/rent/001-rent-600x400.jpg'), alt='Аренда сценической площадки | Над Дождём', srcset= require(
                  '../../images/services/rent/001-rent-600x400.jpg') + ' 600w,' +
                require('../../images/services/rent/001-rent-800x533.jpg') + ' 800w')
            //Body
            div(class='card-body')
              //Title
              h2(class='card-title')
                | Аренда сценической площадки
              //Subtitle
              p(class='card-subtitle')
                | от 25 000 до 40 000 руб
              //Card text
              p(class='card-text')
                | В танцевальном замке "Над дождём" возможно арендовать сценическую площадку для проведения отчетного концерта, творческого вечера, спектакля, семинара, мастер-класса и других различных мероприятий.
