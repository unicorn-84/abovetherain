extends ../../templates/layout
append variables
  -const { options, pages, primaryNavigation, contacts } = require('../../data');
//-HEAD
append meta
  //Page meta tags
  title= `${options.siteName} | ${pages.contacts.title}`
  meta(name="description" content= pages.description)
append icons
  //Page icons
append styles
  //Page styles
//-BODY
append header
  +header(primaryNavigation.items)
append content
  +pageTitle(pages.contacts)
  section#content
    .content-wrap
      .container.clearfix
        .row
          .col-lg-12
            .contact-content
              .contact-address
                i.icon-map-marker
                | !{contacts.address}
              .contact-phone
                i.icon-phone3
                //-TODO изменить телефон
                a(href=`tel:${contacts.phone}`)= contacts.phone
              .contact-email
                i.icon-envelope-alt
                //-TODO добавить форму обратной связи
                  data-ajax contact form
                //-TODO изменить email
                //-a(href="#")= contacts.email
                span= contacts.email
          .col-lg-12
            #yandex-map
append scripts
  //Page scripts
  script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript")
  script.
    ymaps.ready(init);
    function init() {
      const map = new ymaps.Map('yandex-map', {
        center: [59.963612, 30.273182],
        zoom: 17
      });
      map.behaviors.disable('scrollZoom');
      const mark = new ymaps.Placemark([59.964280, 30.272800], {},
        {
          iconLayout: 'default#image',
          iconImageHref: 'images/logo/logo-dark.png',
          iconImageSize: [60, 80],
          iconImageOffset: [-60, -40],
          cursor: 'auto'
        });
      const route1 = new ymaps.Polyline([
        [59.964280, 30.272800],
        [59.964358, 30.273876],
        [59.963719, 30.274693],
        [59.963260, 30.273519]
      ], {}, {
        strokeColor: "#002137",
        strokeWidth: 2,
        strokeStyle: 'dot'
      });
      const route2 = new ymaps.Polyline([
        [59.963882, 30.275045],
        [59.963763, 30.274640]
      ], {}, {
        strokeColor: "#002137",
        strokeWidth: 2,
        strokeStyle: 'dot',
      });
      const route3 = new ymaps.Polyline([
        [59.964196, 30.274412],
        [59.964140, 30.274154]
      ], {}, {
        strokeColor: "#002137",
        strokeWidth: 2,
        strokeStyle: 'dot'
      });
      const evacuator = new ymaps.Placemark([59.962822, 30.274136],
        {

        },
        {
          iconLayout: 'default#image',
          iconImageHref: 'images/evacuator.png',
          iconImageSize: [50, 30],
          iconImageOffset: [-25, -30],
          cursor: 'auto'
        });
      map.geoObjects
        .add(mark)
        .add(route1)
        .add(route2)
        .add(route3)
        .add(evacuator);
    }

