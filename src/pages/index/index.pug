append content
  //Primary Slider
  section#slider.slider-element.swiper_wrapper.full-screen.force-full-screen.clearfix(data-effect="fade" data-loop="true" data-speed="1500" data-autoplay="5000")
    .slider-parallax-inner
      .swiper-container.swiper-parent
        .swiper-wrapper
          //Slide-1
          .swiper-slide.dark(style={
            background: "url(images/slide-1.jpg) 50% 50% / cover no-repeat"
          })
            .overlay
            .container.clearfix
              .slider-caption.slider-caption-center.slide-1
                h2 Над дождём
                p Время твоего превосходства
          //Slide-2
          .swiper-slide.dark(style={
