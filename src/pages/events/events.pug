extends ../../templates/layout
append variables
  -const { options, pages, primaryNavigation, events } = require('../../data');
//-HEAD
append meta
  //Page meta tags
  title= `${options.siteName} | ${pages.events.title}`
  meta(name="description" content= pages.description)
append icons
  //Page icons
append styles
  //Page styles
//-BODY
append header
  +header(primaryNavigation.items)
append content
  +pageTitle(pages.events)
  section#content
    .content-wrap
      .events-wrapper
        .container
          .row
            each event in events
              .col-md-6.col-lg-12
                .event
                  .event-image
                    a(href= event.link)
                      img(src= event.img.src alt= event.img.alt)
                      .event-date
                        span= event.date.day
                        span= event.date.month
                  .event-content
                    .event-title
                      h3= event.title
                    .event-excerpt
                      p= event.excerpt
                      a(href= event.link) Подробнее...
append scripts
  //Page scripts
