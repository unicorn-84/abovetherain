extends ../../templates/layout
append variables
  -const { options, pages, primaryNavigation } = require('../../data');
//-HEAD
append meta
  //Page meta tags
  title= `${options.siteName} | ${pages.schedule.title}`
  meta(name="description" content= pages.description)
append icons
  //Page icons
append styles
  //Page styles
//-BODY
append header
  +header(primaryNavigation.items)
append content
  +pageTitle(pages.schedule)
  section#content
    .content-wrap
      .container
        .row
          .col-12
            .schedule-filter
              select#direction-select(data-select)
                option(value="all" selected) Все направления
                option(value="direction-1") Йога
                option(value="direction-2") Полотно
                option(value="direction-3") Pole Dance
                option(value="direction-4") Растяжка на полотнах
                option(value="direction-5") Кольцо
                option(value="direction-6") Растяжка
                option(value="direction-7") Художественная гимнастика
                option(value="direction-8") Pole Dance детcкий
                option(value="direction-9") Спортивная гимнастика
              select#coach-select(data-select)
                option(value="all" selected) Все тренеры
                option(value="coach-1") Натали
                option(value="coach-2") Виктория
                option(value="coach-3") Александра
                option(value="coach-4") Надежда
              select#day-select(data-select)
                option(value="all" selected) Все дни
                option(value="day-1") Понедельник
                option(value="day-2") Вторник
                option(value="day-3") Среда
                option(value="day-4") Четверг
                option(value="day-5") Пятница
                option(value="day-6") Суббота
          .col-12
            .schedule-wrapper
              include ../../templates/components/schedule
append scripts
  //Page scripts
