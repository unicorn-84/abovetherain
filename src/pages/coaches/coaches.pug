extends ../../templates/layout
append variables
  - const { options, pages, primaryNavigation, coaches } = require('../../data');
//-HEAD
append meta
  //Page meta tags
  title= pages.coaches.title
  meta(name='description', content= pages.coaches.description)
append icons
  //Page icons
append styles
  //Page styles
  each cssFile in htmlWebpackPlugin.files.css
    if cssFile.search(/inline/i) === -1 && (cssFile.search(/vendor/i) !== -1 || cssFile.search(/commons/i) !== -1 || cssFile.search(/coaches/i) !== -1)
      link(href=cssFile, rel='preload', as='style', onload='this.onload=null\;this.rel=\'stylesheet\'')
      noscript
        link(href=cssFile, rel='stylesheet')
  each cssFile in htmlWebpackPlugin.files.css
    if cssFile.search(/inline~coaches/i) !== -1
      style=compilation.assets[cssFile.substr(htmlWebpackPlugin.files.publicPath.length)].source()
//-BODY
append header
  +header(primaryNavigation.items)
append content
  +pageTitle(pages.coaches)
  section#content
    .content-wrap
      .coaches-wrapper
        .container
          .row
            each coach in coaches
              .col-sm-6.col-md-6.col-lg-4
                .coach-wrapper
                  .coach
                    .coach-image
                      img(src= require(`../../images/coaches/${coach.name}.jpg`), srcset= require(`../../images/coaches/${coach.name}.jpg`) + ' 1x, ' + require(`../../images/coaches/${coach.name}@2x.jpg`) + ' 2x', alt= `${coach.title} | ${options.name}`)
                    .coach-info
                      div
                        .coach-title
                          h2= coach.title
                        .coach-directions
                          each direction in coach.directions
                            if direction.link
                              a(href= direction.link)
                                h4= direction.title
                            else
                              a(href='services.html')
                                h4= direction.title
                      .coach-icons
                        if coach.link
                          a(href= coach.link)
                            i.icon-line2-info
                        a(href=`schedule.html?direction=all&coach=${coach.name}&day=all`)
                          i.icon-calendar2
append scripts
  //Page scripts
  each jsFile in htmlWebpackPlugin.files.js
    if jsFile.search(/inline/i) === -1 && (jsFile.search(/vendor/i) !== -1 || jsFile.search(/commons/i) !== -1 || jsFile.search(/coaches/i) !== -1)
      script(src= jsFile, type='text/javascript')
  each jsFile in htmlWebpackPlugin.files.js
    if jsFile.search(/inlineCoaches/i) !== -1
      script(type='text/javascript') !{compilation.assets[jsFile.substr(htmlWebpackPlugin.files.publicPath.length)].source()}
