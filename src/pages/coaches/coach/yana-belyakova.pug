extends ../../../views/layouts/app
append variables
  -var page = htmlWebpackPlugin.options.vars.page
  -var icon = require('../../../images/icons/favicon.ico')
  -var logo = require('../../../images/logo/logo.png')
append content
  div(id='content')
    div(class='container')
      div(class='row justify-content-center')
        div(class='col-12 col-lg-8')
          div(class='card card-page')
            div(class='card-body')
              h2(class='card-title text-center')
                | Яна Белякова
              blockquote(class='blockquote')
                p(class='card-text')
                  | &laquo;Когда меня спрашивают почему я выбрала воздушную хореографию я отвечаю: - Я не выбирала, я была выбрана ею.
                  br
                  | <a href='services/pole-dance.html'>Pole&nbsp;Dance</a> это ключ к нашему телу который освобождает физическое мышление. Когда вы танцуете думайте телом и в ответ вы получите энергию и вдохновение.&raquo;
                footer(class='blockquote-footer')
                  cite(title='Надежда Лучинина') Яна Белякова
            if data.coaches.yanaBelyakova.directions || data.coaches.yanaBelyakova.schedule
              //Footer
              div(class='card-footer coach-footer')
                if data.coaches.yanaBelyakova.directions
                  div(class='coach-direction-link')
                    h5(class='card-text')
                      i(class='far fa-list-alt fa-lg')
                      | &nbsp;
                      | Направления:
                    ul
                      each direction in data.coaches.yanaBelyakova.directions
                        li
                          if direction.link
                            a(href= direction.link)= direction.title
                          else
                            | #{direction.title}
                  if data.coaches.yanaBelyakova.schedule
                    div(class='coach-schedule-link')
                      h5(class='card-text')
                        a(class='coach-schedule-link', href= data.coaches.yanaBelyakova.schedule)
                          i(class='far fa-calendar-alt fa-lg')
                          | &nbsp;
                          | Расписание занятий
