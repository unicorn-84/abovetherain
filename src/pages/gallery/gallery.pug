extends ../../templates/layout
append variables
  -const { common, options, pages, primaryNavigation } = require('../../data');
//-HEAD
append meta
  //Page meta tags
  title= `${common.name} | ${pages.gallery.title}`
  if pages.gallery.description
    meta(name='description', content= pages.gallery.description)
  else
    meta(name='description', content= common.description)
  if pages.gallery.keys
    meta(name='keywords', content= pages.gallery.keys)
append icons
  //Page icons
append styles
  //Page styles
//-BODY
append header
  +header(primaryNavigation.items)
append content
  +pageTitle(pages.gallery)
  section#content
    .content-wrap
      .gallery-wrapper
        .container
          //-TODO new lightbox gallery
          div.row(data-lightbox="gallery")
            -let i = 1;
            while i <= 31
              .col-sm-6.col-lg-4.center
                .gallery-image
                  a(href= require(`../../images/gallery/${i}.jpg`) data-lightbox="gallery-item")
                    img(src= require(`../../images/gallery/thumbnails/${i}.jpg`) alt= options.siteName)
                    -i += 1;
append scripts
  //Page scripts
