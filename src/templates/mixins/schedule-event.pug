mixin schedule-event(rowspan, directionClass, direction, coachClass, coach, dayClass, timeStart, timeEnd)
  td.schedule-event(rowspan= rowspan data-direction= directionClass data-coach= coachClass data-day= dayClass)
    if direction
      .schedule-title
        a(href='services.html') !{direction}
      .schedule-interval
        span= `${timeStart}-${timeEnd}`
    if coach
      .schedule-coach
        a(href='coaches.html')= coach
