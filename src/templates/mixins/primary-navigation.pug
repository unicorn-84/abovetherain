mixin primary-navigation(items)
  nav#primary-menu.dark.with-arrows
    ul
      each item in items
        if !item.subitems
          li(class={current: pageName === item.name})
            a(href=`${item.name}.html`) #{item.title}
        else
          li(class={current: pageName === item.name})
            a(href=`${item.name}.html`)
              div #{item.title}
            ul
              each subitem in item.subitems
                li
                  a(href=`${data.ajaxFolder}/${subitem.name}.html` data-ajax) #{subitem.title}
    #top-search
      a#top-search-trigger(href="#")
        i.icon-search3
        i.icon-line-cross
      form(action="" method="get")
        input.form-control(type="text" name="q" value="" placeholder="поиск..")