mixin header(items, className)
  header#header.transparent-header.no-sticky(class= className)
    #header-wrap
      .container.clearfix
        #primary-menu-trigger: i.icon-reorder
        //Logo
        #logo
          a(href="index.html", style='display: inline-block;')
            img(src= require('../../images/logo/logo.png'), srcset= require('../../images/logo/logo.png') + ' 1x, ' + require('../../images/logo/logo@2x.png') + ' 2x, ' + require('../../images/logo/logo@3x.png') + ' 3x', alt="Логотип танцевального клуба 'Над дождем'")
        //Primary Navigation
        nav#primary-menu.with-arrows
            ul
              each item in items
                if !item.subitems
                  li(class={current: pageName === item.name})
                    a(href=`${item.name}.html`) #{item.title}
                else
                  li(class={current: pageName === item.name})
                    a(href=`${item.name}.html`)
                      div #{item.title}
                    ul
                      each subitem in item.subitems
                        li
                          if subitem.page
                            a(href=`${subitem.name}.html`) #{subitem.title}
                          else
                            a(data-ajax href=`data/services/${subitem.name}.html`) #{subitem.title}
